          "store_id"
        ],
        "properties": {
          "store_id": {
            "type": "string"
          },
          "query": {
            "type": "string",
            "description": "Name/keywords, e.g., \"AA batteries\""
          },
          "sku": {
            "type": "string"
          },
          "upc": {
            "type": "string"
          },
          "max_results": {
            "type": "number",
            "default": 10
          }
        }
      },
      "resultSchema": {
        "type": "object",
        "required": [
          "store_id",
          "products"
        ],
        "properties": {
          "store_id": {
            "type": "string"
          },
          "products": {
            "type": "array",
            "items": {
              "type": "object",
              "required": [
                "sku",
                "name",
                "aisle",
                "on_hand_qty",
                "last_updated"
              ],
              "properties": {
                "sku": {
                  "type": "string"
                },
                "upc": {
                  "type": "string"
                },
                "name": {
                  "type": "string"
                },
                "brand": {
                  "type": "string"
                },
                "size": {
                  "type": "string"
                },
                "aisle": {
                  "type": "string"
                },
                "bay": {
                  "type": "string"
                },
                "on_hand_qty": {
                  "type": "number"
                },
                "sellable_qty": {
                  "type": "number"
                },
                "shelf_tag_price": {
                  "type": "number"
                },
                "currency": {
                  "type": "string",
