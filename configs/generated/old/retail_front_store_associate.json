          "category": {
            "type": "string",
            "enum": [
              "SPILL",
              "CLEANUP",
              "GRAFFITI",
              "SAFETY_HAZARD",
              "DOOR_ISSUE",
              "EQUIPMENT",
              "RESTROOM",
              "TRASH",
              "OTHER"
            ]
          },
          "description": {
            "type": "string"
          },
          "location": {
            "type": "object",
            "required": [
              "area"
            ],
            "properties": {
